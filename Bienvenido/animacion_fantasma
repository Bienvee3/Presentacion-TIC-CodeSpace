#!/bin/bash

clear
green='\033[0;32m'
red='\033[1;31m'
nc='\033[0m' # No color

# Funci贸n para mostrar el fantasma en una posici贸n X
function show_fantasma() {
    clear
    tput cup 5 $1
    cat fantasma.txt
}

# Animaci贸n de aparici贸n del fantasma
for i in {0..30..5}; do
    show_fantasma $i
    sleep 0.2
done

sleep 1

# Efecto de captura
clear
tput cup 5 10
echo -e "${red} 隆Fantasma cazado! ${nc}"
sleep 1.5
clear
