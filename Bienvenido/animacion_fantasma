#!/bin/bash

clear
green='\033[0;32m'
red='\033[1;31m'
nc='\033[0m' # No color

# Función para mostrar el fantasma en una posición X
function show_fantasma() {
    clear
    tput cup 5 $1
    cat fantasma.txt
}

# Animación de aparición del fantasma
for i in {0..30..5}; do
    show_fantasma $i
    sleep 0.2
done

sleep 1

# Efecto de captura
clear
tput cup 5 10
echo -e "${red}🚫 ¡Fantasma cazado! 🚫${nc}"
sleep 1.5
clear
