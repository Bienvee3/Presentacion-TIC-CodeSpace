#!/bin/bash

# Verifica que estÃ©n instalados figlet, toilet y lolcat
for cmd in figlet toilet lolcat; do
  # Si alguno de los comandos no estÃ¡ instalado, lo instala
  if ! command -v $cmd &> /dev/null; then
    # Muestra un mensaje indicando que se va a instalar el comando
    echo "Instalando $cmd..."
    # Actualiza los repositorios e instala el comando necesario
    sudo apt update && sudo apt install -y $cmd
  fi
done

# Limpiar la pantalla para hacer espacio para la salida
clear

# Mensaje que indica que se van a mostrar banners personalizados
echo "ðŸŽ¨ Mostrando banners personalizados..."

# Pausa de 1 segundo antes de continuar
sleep 1

# Mostrar un banner con figlet (texto ASCII) y luego pasa la salida por lolcat (efecto de texto cÃ³mico)
echo -e "\nðŸ”¤ Con figlet + lolcat:"
# El texto "Ghostbusters" es procesado con figlet y luego pasa por lolcat para un efecto gracioso
figlet "Ghostbusters" | lolcat

# Pausa de 1 segundo antes de mostrar el siguiente banner
sleep 1

# Mostrar un banner con toilet usando la fuente "future" y aplicando el efecto de colores arcoÃ­ris (--gay)
echo -e "\nðŸ”¤ Con toilet (fuente futura) + colores:"
# El texto "ASCII Art" se muestra con la fuente "future" y el color arcoÃ­ris
toilet -f future "ASCII Art" --gay

# Pausa de 1 segundo antes de mostrar el siguiente banner
sleep 1

# Mostrar un banner con toilet usando la fuente "mono12" y el efecto de "metal", que crea un estilo de texto sangriento
echo -e "\nðŸ”¤ Con toilet (metal estilo sangriento ðŸ’€):"
# El texto "Terminal Fun" se muestra con la fuente "mono12" y el estilo metal (ðŸ’€)
toilet -f mono12 -F metal "Terminal Fun"

# Mensaje final que indica que ya estÃ¡ listo
echo -e "\nâœ… Â¡Listo! Puedes combinar efectos para crear intros, tÃ­tulos o menÃºs animados en terminal."
